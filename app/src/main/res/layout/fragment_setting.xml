<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_phone"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <!-- add child view’s here -->




        <LinearLayout
            android:id="@+id/layout_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/section_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merci de renseigner les numéros de vos contacts:" />
            <ImageButton
                android:id="@+id/button_emergency1"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/button_margin"
                android:layout_height="@dimen/button_margin"
                android:background = "@drawable/roundedbutton"
                android:src="@drawable/ic_contact_phone"
                android:text="Get emergency contact1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058" />
            <EditText
                android:id="@+id/editNumber1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Emergency Number 1"
                android:inputType="phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/button_emergency2"

                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/button_margin"
                android:layout_height="@dimen/button_margin"
                android:background = "@drawable/roundedbutton"
                android:src="@drawable/ic_contact_phone"
                android:text="Get emergency contact2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058" />
            <EditText
                android:id="@+id/editNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Emergency Number 2"
                android:inputType="phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:id="@+id/button_emergency3"

                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/button_margin"
                android:layout_height="@dimen/button_margin"
                android:background = "@drawable/roundedbutton"
                android:src="@drawable/ic_contact_phone"
                android:text="Get emergency contact3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058" />

            <EditText
                android:id="@+id/editNumber3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Emergency Number 3"
                android:inputType="phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/phone_save"

                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/button_margin"
                android:layout_height="@dimen/button_margin"
                android:background = "@drawable/roundedbutton"
                android:src="@drawable/ic_save"
                android:text="Save settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058" />





        </LinearLayout>

    </ScrollView>

</RelativeLayout>